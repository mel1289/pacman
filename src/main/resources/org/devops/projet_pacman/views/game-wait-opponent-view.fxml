<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.devops.projet_pacman.controllers.GameWaitOpponentController"
            stylesheets="@../styles.css">

        <VBox alignment="CENTER" spacing="40" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" >
            <Label fx:id="codeLabel" style="-fx-text-fill: #FFD700; -fx-font-size: 18px;" />

            <StackPane fx:id="cancelButton" styleClass="menu-div">
                <Rectangle width="300" height="50" styleClass="menu-border" />
                <Text text="Annuler la partie" styleClass="menu-text" />
            </StackPane>
        </VBox>
</AnchorPane>

