<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../styles.css"
            fx:controller="org.devops.projet_pacman.controllers.PlayMultiplayerController"
            style="-fx-background-color: #000000;">

    <HBox alignment="CENTER" spacing="40" AnchorPane.topAnchor="60" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <VBox alignment="CENTER">
            <Text text="SCORE" style="-fx-fill: #ffffff; -fx-font-size: 24px; -fx-font-weight: bold;" />
            <Text fx:id="scoreText" styleClass="score-text" text="0" />
        </VBox>

        <VBox alignment="CENTER">
            <Text text="VIE" style="-fx-fill: #ffffff; -fx-font-size: 24px; -fx-font-weight: bold;" />
            <Text fx:id="scoreText2" styleClass="life-text" text="3" />
        </VBox>
    </HBox>
    <VBox fx:id="centerContent" alignment="CENTER" spacing="20"
          AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="60" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <Pane fx:id="gamePane">

        </Pane>

        <StackPane fx:id="btnRetour" styleClass="menu-div" alignment="CENTER">
            <Rectangle width="200" height="50" styleClass="menu-border" />
            <Text text="Menu principal" styleClass="menu-text" />
        </StackPane>
    </VBox>

</AnchorPane>
